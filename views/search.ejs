<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <title>WaterBnB</title>
</head>
<body>

    <div class="results-container">

        <div class="result-links">
        <a href="/" id="home">Home</a>
        <a href="/logout" id="logout">Logout</a>
        </div>

        <h1>Find your pool!</h1>
        <div class="results-search-form">
            <form action="/search" method="post">
                <input type="text" class="form-control" name="search" placeholder="new search">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <div class="results-table">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Address</th>
                    <th>Pool Size</th>
                    <th>Cost Per night</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
            <%  searchPools.forEach(function(pool){ %>
                    <tr>
                        <td><%=pool.address%></td>
                        <td><%=pool.poolSize%></td>
                        <td><%=pool.costPerNight%></td>
                        <td><a href="/pools/<%=pool._id%>">See more</a></td>
                    </tr>
            <%  });  %>


            </tbody>
            </table>
        </div>


    </div>
   
    


    <!--Bootstrap Script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>