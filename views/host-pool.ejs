<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <title>WaterBnB</title>
</head>
<body>

    <div class="pool-container">

        <div class="result-links">
            <a href="/" id="home">Home</a>
            <a href="/logout" id="logout">Logout</a>
        </div>

        <!-- Formulario Actualizar Piscina -->
        <form action="/updatePool" method="post">

            <div class="info-pool">
                <h3><%=resPool.address%></h3>
                <textarea name="description" id="txt-host" cols="30" rows="10" class="form-control"><%=resPool.description%></textarea>
            </div>

            <div class="info-host">
                <h3>Email: <%=resUser.username%></h3>
                <h3>Name: <%=resUser.firstName%> <%=resUser.lastName%></h3>

                <div class="info-edit">

                    <label class="form-label">Pool size: </label>
                    <select name="poolSize" id="" class="form-select">
                        <option value="small">small</option>
                        <option value="medium">medium</option>
                        <option value="large">large</option>
                    </select>
                <label class="form-label">Cost:</label>
                <input type="number" name="costPerNight" class="form-control" placeholder="<%=resPool.costPerNight%>">

                </div>

               


            </div>

            <button type="submit" id="btn-host" class="btn btn-primary" value="<%=resPool._id%>" name="pool">Save Changes</button>
        </form>

        
        <!-- Reviews De La Piscina -->
        <div class="reviews-container">
            
            <h3>Reviews</h3>
           
            <div class="reviews">
                <div class="review">
                    <%  resPool.reviews.forEach(function(review) { %>
                        <h4><%=review.username%></h4>
                        <h5>Rating: <%=review.rating%>/5</h5>
                        <p><%=review.description%></p>
                        <hr>
                  <%  }); %>
                </div>
            </div>

        </div>

    </div>
   
    


    <!--Bootstrap Script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>