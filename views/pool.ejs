<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <title>WaterBnB</title>
</head>
<body>

    <div class="pool-container">

        <div class="result-links">
            <a href="/" id="home">Home</a>
            <a href="/logout" id="logout">Logout</a>
        </div>

        <div class="info-pool">
            <h3><%=resPool.address%></h3>
            <p><%=resPool.description%></p>
        </div>

        <div class="info-host">
            <h3>Email: <%=resUser.username%></h3>
            <h3>Name: <%=resUser.firstName%> <%=resUser.lastName%></h3>
            <h3>Pool size: <%=resPool.poolSize%></h3>
            <h3>Cost: <%=resPool.costPerNight%></h3>
        </div>

        <div class="reviews-container">
            
            <h3>Reviews *rating*</h3>
            <a href="/pools/review/<%=resPool._id%>">Leave a Review</a>
           
            <div class="reviews">
                <div class="review">
                  <%  resPool.reviews.forEach(function(review) { %>
                        <h4><%=review.username%></h4>
                        <h5>Rating: <%=review.rating%>/5</h5>
                        <p><%=review.description%></p>
                        <hr>
                  <%  }); %>

                </div>
            </div>

        </div>

    </div>
   
    


    <!--Bootstrap Script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>