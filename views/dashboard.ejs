<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <title>WaterBnB</title>
</head>
<body>


    <div class="dashboard-container">
        
        <div class="result-links">
        <a href="/" id="home">Home</a>
        <a href="/logout" id="logout">Logout</a>
        </div>

        <h1>Current Listings</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Address</th>
                    <th>Pool Size</th>
                    <th>Cost Per night</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                
            <%    foundPools.forEach(function(pool) { %>
                    <tr>
                        <td><%=pool.address%></td>
                        <td><%=pool.poolSize%></td>
                        <td><%=pool.costPerNight%></td>
                        <td><a href="/host/pool/<%=pool._id%>">Edit</a></td>
                    </tr>
              <%  }); %>


            </tbody>
        </table>

        <div class="new-listing">
            <h2>New Listing</h2>
            <form action="/dashboard" method="post">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" name="address">
                <label class="form-label">Description</label>
                <textarea class="form-control" id="floatingTextarea" cols="30" rows="10" name="description"></textarea>
                <label class="form-label">Cost per night</label>
                <input type="number" name="costPerNight" class="form-control small-input" placeholder="100" min="1">
                <label>Pool Size</label>
                <select name="poolSize" class="form-select small-input">
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="large">Large</option>
                </select>
                <button type="submit" class="btn btn-primary">Add Listing</button>
            </form>

        </div>




    </div>
   
    


    <!--Bootstrap Script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>